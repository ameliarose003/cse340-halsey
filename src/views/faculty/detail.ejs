<!-- Faculty Detail Template (src/views/faculty/detail.ejs):

Display detailed information about the faculty member
Include name, office, phone, email, department, and title
Provide a link back to the faculty list
Follow the same styling patterns as your course detail pages -->

<%- include('../partials/header') %>
<main>
    <div class="faculty-profile">
        <h1><%= facultyMember.name %></h1>
        <p class="faculty-description">Meet <%= facultyMember.name%> our wonderful <%= facultyMember.department %> <%= facultyMember.title %>!</p>
        <!-- <p class="faculty-title"><%= facultyMember.title %></p> -->
        <!-- <p class="faculty-department"><%= facultyMember.department %> Department</p> -->
    </div>
    
    <div class="faculty-contact">
        <h2>Contact Information</h2>
        <img class="faculty-photo" src="/images/faculty-images/<%= facultyMember.slug%>.jpg" alt="<%= facultyMember.name%>">
        <div class="contact-details">
            <div class="contact-item">
                <strong>Office:</strong> <%= facultyMember.office %>
            </div>
            <div class="contact-item">
                <strong>Phone:</strong> <a href="tel:<%= facultyMember.phone %>"><%= facultyMember.phone %></a>
            </div>
            <div class="contact-item">
                <strong>Email:</strong> <a href="mailto:<%= facultyMember.email %>"><%= facultyMember.email %></a>
            </div>
        </div>
    </div>
    
    <div class="navigation">
        <p><a href="/faculty">&larr; Back to Faculty Directory</a></p>
    </div>
</main>
<%- include('../partials/footer') %>