<!-- Faculty List Template (src/views/faculty/list.ejs):

Display all faculty members in a grid or list format
Make each faculty member's name link to their detail page
Show basic information like name, department, and title
Include proper navigation back to main site -->

<%- include('../partials/header') %>
<main>
    <h1 class="faculty-title"><%= title %></h1>
    <p class="faculty-description">Meet Our Caring and Supportive Faculty</p>
    
    <div class="faculty-sort-options">
        <div class="sort-options">
            <span><strong> Sort by: </strong></span>
            <a href="/faculty" class="<%= currentSort === 'name' ? 'active' : '' %>">Name</a>
            <a href="/faculty?sort=department" class="<%= currentSort === 'department' ? 'active' : '' %>">Department</a>
            <a href="/faculty?sort=title" class="<%= currentSort === 'title' ? 'active' : '' %>">Title</a>
            </div>
    </div>

    <div class="faculty-list">
        <% facultyList.forEach(member => { %>
            <div class="faculty-card">
                <h3><a href="/faculty/<%= member.slug %>"><%= member.name %></a></h3>
                <p class="faculty-title"><%= member.title %></p>
                <p class="faculty-department"><%= member.department %></p>
            </div>
        <% }); %>
    </div>

</main>
<%- include('../partials/footer') %>