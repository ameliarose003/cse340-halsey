<!-- NOTE: Sorting will not be a feature on this page -->
<%- include('../../partials/header') %>
<main>
    <h1><%= title %></h1>

    <!-- TODO: Check if users array exists and has content -->
     <% if (allRegisteredUsers && allRegisteredUsers.length > 0) { %>
        <!-- TODO: Add appropriate classes and ids; see the styles section for some ideas -->
        <div class="users-list">
            <!-- TODO: Loop through users and display: ID, name, email, registration date -->
            <% allRegisteredUsers.forEach(form => { %>
                <div class="user-card">
                    <div class="user-header">
                        <h3 class="user-name">Name: <%= form.name %></h3>
                        <p class="user-id">User ID: #<%= form.id %></p>
                    </div>
                    <div class="user-details">
                        <div class="detail-item">
                            <p class="label">Email: </p>
                            <p class="value"><%= form.email %></p>
                        </div>
                        <div class="detail-item">
                            <p class="label">Registration Date: </p>
                            <p class="value"><%= form.created_at %></p>
                        </div>
                    </div>
                </div>
                    <% }) %>
            <% } else { %>
                <!-- TODO: Handle the case when no users are registered -->
                <p class="no-users">No registration form submissions yet.</p>
            <% } %>
        </div>
     
    <!-- TODO: Format the created_at date nicely -->

</main>
<%- include('../../partials/footer') %>